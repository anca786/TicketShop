<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-ticket-perforated-fill text-primary"></i> TicketShop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Acasă</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Evenimente" asp-action="Index">Evenimente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Categorii" asp-action="Index">Categorii</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Confidențialitate</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                    Administrare
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Evenimente" asp-action="AdminIndex">Gestionează Evenimente</a></li>
                                    <li><a class="dropdown-item" asp-controller="Categorii" asp-action="AdminIndex">Gestionează Categorii</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">Gestionează Utilizatori</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Colaborator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold" asp-controller="Evenimente" asp-action="New">
                                    <i class="bi bi-plus-circle-fill"></i> Propune Eveniment
                                </a>
                            </li>
                        }
                       
                        <li class="nav-item ms-auto">
                            <a class="nav-link text-dark fw-bold position-relative" asp-controller="Cos" asp-action="Index">
                                <i class="bi bi-cart3 fs-5"></i>
                                <span class="d-none d-sm-inline">Coșul meu</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Wishlist" asp-action="Index">
                                <i class="bi bi-heart" style="color: hotpink;"></i>
                                <span class="d-none d-sm-inline">Wishlist</span>
                            </a>
                        </li>

                    </ul>

                    <ul class="navbar-nav">
                        @using Microsoft.AspNetCore.Identity
                        @using TicketShop.Models
                        @inject SignInManager<ApplicationUser> SignInManager
                        @inject UserManager<ApplicationUser> UserManager

                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Users" asp-action="Profile" title="Vezi Profilul Meu">
                                    <i class="bi bi-person-circle"></i> Salut, @currentUser?.Nume!
                                </a>
                            </li>
                            <li class="nav-item">
                                <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2 btn-sm" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">Înregistrare</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-auto">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-4">
                    <h5>TicketShop</h5>
                    <p class="small">Platforma ta numărul 1 pentru evenimente live.</p>
                </div>
                <div class="col-md-4">
                    <h5>Link-uri Utile</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Despre" class="text-decoration-none text-muted">Despre Noi</a></li>
                        <li><a asp-controller="Home" asp-action="FAQ" class="text-decoration-none text-muted">Întrebări Frecvente</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted">Confidențialitate</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Suport</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Contact" class="text-decoration-none text-muted">Contact</a></li>
                    </ul>
                </div>
            </div>
            <div class="text-center mt-3 border-top pt-3">
                &copy; 2025 - TicketShop
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <button id="chat-toggle-btn" onclick="toggleChat()">
        <i class="bi bi-chat-heart-fill"></i> Asistență
    </button>

    <div id="chat-window" class="card shadow-lg">

        <div class="card-header text-white d-flex justify-content-between align-items-center"
             style="background: linear-gradient(45deg, #ff80ab, #ff4081);">
            <span><i class="bi bi-robot"></i> Asistent TicketShop</span>
            <button type="button" class="btn-close btn-close-white" onclick="toggleChat()"></button>
        </div>

        <div class="card-body" id="chat-messages">
            <div class="chat-bubble bot-message">
                Bună! 🌸 Sunt aici să te ajut. Întreabă-mă ceva!
            </div>
        </div>

        <div class="card-footer bg-white">
            <div class="input-group">
                <input type="text" id="chat-input" class="form-control" placeholder="Scrie aici..." onkeypress="handleEnter(event)">
                <button class="btn btn-pink text-white" onclick="sendMessage()" style="background-color: #ff4081;">
                    <i class="bi bi-send-fill"></i>
                </button>
            </div>
        </div>
    </div>
    <style>
        #chat-toggle-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background-color: #ff4081;
            color: white;
            border: none;
            border-radius: 50px;
            padding: 15px 25px;
            font-size: 1.2rem;
            box-shadow: 0 4px 15px rgba(255, 64, 129, 0.4);
            cursor: pointer;
            z-index: 9999;
            transition: transform 0.3s;
            font-family: 'Segoe UI', sans-serif;
        }

            #chat-toggle-btn:hover {
                transform: scale(1.1);
                background-color: #f50057;
            }

        #chat-window {
            position: fixed;
            bottom: 100px;
            right: 30px;
            width: 350px;
            height: 450px;
            display: none;
            z-index: 9999;
            border-radius: 20px;
            border: none;
            overflow: hidden;
            animation: slideIn 0.3s ease-out;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        #chat-messages {
            height: 320px;
            overflow-y: auto;
            background-color: #fce4ec;
            padding: 15px;
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .chat-bubble {
            max-width: 80%;
            padding: 10px 15px;
            border-radius: 15px;
            font-size: 0.95rem;
            line-height: 1.4;
        }

        .bot-message {
            background-color: #ffffff;
            color: #333;
            align-self: flex-start;
            border-bottom-left-radius: 2px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .user-message {
            background-color: #ff80ab;
            color: white;
            align-self: flex-end;
            border-bottom-right-radius: 2px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
    </style>

    <script>
        function toggleChat() {
            var chatWindow = document.getElementById("chat-window");
            if (chatWindow.style.display === "none" || chatWindow.style.display === "") {
                chatWindow.style.display = "block";
            } else {
                chatWindow.style.display = "none";
            }
        }

        function handleEnter(e) {
            if (e.key === 'Enter') sendMessage();
        }

        function sendMessage() {
            var input = document.getElementById("chat-input");
            var message = input.value.trim();
            var messagesArea = document.getElementById("chat-messages");

            if (message === "") return;

            var userBubble = document.createElement("div");
            userBubble.className = "chat-bubble user-message";
            userBubble.innerText = message;
            messagesArea.appendChild(userBubble);

            input.value = "";
            messagesArea.scrollTop = messagesArea.scrollHeight; 

            fetch('/Chat/GetRaspuns', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ message: message })
            })
            .then(response => response.json())
            .then(data => {
                var botBubble = document.createElement("div");
                botBubble.className = "chat-bubble bot-message";
                botBubble.innerText = data.response;
                messagesArea.appendChild(botBubble);

                messagesArea.scrollTop = messagesArea.scrollHeight;
            })
            .catch(error => console.error('Eroare:', error));
        }
    </script>
</body>
</html>