@model TicketShop.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Logare";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="mb-3">Bine ai revenit!</h2>
        <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" placeholder="Parola" />
                <label asp-for="Password">Parolă</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="RememberMe" />
                <label class="form-check-label" asp-for="RememberMe">
                    Ține-mă minte
                </label>
            </div>

            <button type="submit" class="btn btn-lg btn-success w-100">Login</button>
            <div class="mt-2 text-center">
                <a asp-action="Register">Nu ai cont? Înregistrează-te</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}