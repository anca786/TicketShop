@model IEnumerable<TicketShop.Models.Categorie>

@{
    ViewData["Title"] = "Categorii";
}

<div class="container py-5">
    <h2 class="fw-bold mb-4 text-center">Exploarează după Categorie</h2>

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm text-center h-100 border-0">
                    <div class="card-body d-flex flex-column justify-content-center align-items-center p-5 bg-light rounded">

                        <i class="bi bi-tags-fill fs-1 text-primary mb-3"></i>

                        <h3 class="card-title fw-bold">@item.Nume</h3>

                        <p class="text-muted">
                            @item.Evenimente?.Count evenimente disponibile
                        </p>

                        <a asp-controller="Evenimente" asp-action="Index" asp-route-categoryId="@item.Id" class="btn btn-outline-primary mt-3 stretched-link">
                            Vezi Evenimente
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>