@model TicketShop.Models.ViewModels.UserSettingsViewModel
@{
    ViewData["Title"] = "Setări Cont";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white text-center py-4" style="background: linear-gradient(45deg, #880e4f, #d63384);">
                    <h3 class="fw-bold mb-0"><i class="bi bi-gear-fill"></i> Setări Cont</h3>
                </div>

                <div class="card-body p-5">

                    @if (TempData["Eroare"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Eroare"]</div>
                    }

                    <form asp-action="Settings" method="post">

                        <h5 class="text-secondary border-bottom pb-2 mb-4">Informații Personale</h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Nume</label>
                                <input asp-for="Nume" class="form-control" placeholder="Numele tău" />
                                <span asp-validation-for="Nume" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Prenume</label>
                                <input asp-for="Prenume" class="form-control" placeholder="Prenumele tău" />
                                <span asp-validation-for="Prenume" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Email (Nu se poate modifica)</label>
                            <input asp-for="Email" class="form-control bg-light" readonly />
                            <small class="text-muted">Pentru schimbarea emailului, contactează administratorul.</small>
                        </div>


                        <h5 class="text-secondary border-bottom pb-2 mb-4 mt-5">Schimbare Parolă (Opțional)</h5>

                        <div class="alert alert-light border small text-muted">
                            <i class="bi bi-info-circle"></i> Completează câmpurile de mai jos <strong>doar dacă</strong> vrei să schimbi parola.
                        </div>

                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label">Parola Actuală</label>
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger small"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="NewPassword" class="form-label">Parola Nouă</label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmNewPassword" class="form-label">Confirmă Parola</label>
                                <input asp-for="ConfirmNewPassword" class="form-control" />
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold" style="background-color: #d63384; border: none;">
                                <i class="bi bi-save"></i> Salvează Modificările
                            </button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">
                                Anulează
                            </a>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mt-3 text-center"></div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>