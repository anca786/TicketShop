@model TicketShop.Models.ApplicationUser

@{
    ViewData["Title"] = "Contul Meu";
    // Calculăm niște statistici simple
    var totalBilete = Model.Bilete?.Count ?? 0;
    var totalCheltuit = Model.Bilete?.Sum(b => b.Pret) ?? 0;
    var totalReviews = Model.Reviews?.Count ?? 0;
}

<div class="bg-dark text-white py-5 mb-5" style="background: linear-gradient(45deg, #880e4f, #d63384); margin-top: -1.5rem;">
    <div class="container">
        <div class="d-flex align-items-center">
            <div class="rounded-circle bg-white text-danger d-flex justify-content-center align-items-center fw-bold shadow"
                 style="width: 80px; height: 80px; font-size: 2.5rem; border: 4px solid rgba(255,255,255,0.3);">
                @if (!string.IsNullOrEmpty(Model.Nume))
                {
                    @Model.Nume.Substring(0, 1).ToUpper()
                }
                else
                {
                    <i class="bi bi-person"></i>
                }
            </div>
            <div class="ms-4">
                <h2 class="fw-bold mb-0">Salut, @Model.Nume!</h2>
                <p class="text-white-50 mb-0">Bine ai venit în panoul tău de control.</p>
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top: -3rem;">

    <div class="row mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-light p-3 rounded-circle text-primary me-3">
                        <i class="bi bi-ticket-perforated-fill fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-0">Bilete Cumpărate</h6>
                        <h3 class="fw-bold mb-0">@totalBilete</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-light p-3 rounded-circle text-success me-3">
                        <i class="bi bi-cash-stack fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-0">Total Investit</h6>
                        <h3 class="fw-bold mb-0">@totalCheltuit LEI</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-light p-3 rounded-circle text-warning me-3">
                        <i class="bi bi-star-fill fs-4"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-0">Recenzii Lăsate</h6>
                        <h3 class="fw-bold mb-0">@totalReviews</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white fw-bold py-3">
                    <i class="bi bi-person-lines-fill text-danger me-2"></i> Datele Tale
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0">
                            <small class="text-muted d-block">Nume Complet</small>
                            <span class="fw-bold">@Model.Nume @Model.Prenume</span>
                        </li>
                        <li class="list-group-item px-0">
                            <small class="text-muted d-block">Email</small>
                            <span>@Model.Email</span>
                        </li>
                    </ul>
                    <div class="d-grid mt-3">
                        <a asp-controller="Users" asp-action="Settings" class="btn btn-outline-dark btn-sm">
                            <i class="bi bi-gear"></i> Setări Cont
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <h4 class="fw-bold mb-4">Biletele Mele</h4>

            @if (Model.Bilete != null && Model.Bilete.Any())
            {
                @foreach (var bilet in Model.Bilete.OrderByDescending(b => b.Eveniment.Data))
                {
                    // DESIGN TIP "BOARDING PASS"
                    <div class="card shadow-sm border-0 mb-3 overflow-hidden">
                        <div class="row g-0">
                            <div class="col-md-3 bg-light d-flex flex-column justify-content-center align-items-center p-3 text-center border-end border-dashed">
                                <span class="display-6 fw-bold text-danger">@bilet.Eveniment.Data.Day</span>
                                <span class="text-uppercase fw-bold">@bilet.Eveniment.Data.ToString("MMM yyyy")</span>
                                <small class="text-muted">@bilet.Eveniment.Data.ToString("HH:mm")</small>
                            </div>

                            <div class="col-md-6 p-3 d-flex flex-column justify-content-center">
                                <h5 class="fw-bold mb-1">@bilet.Eveniment.Nume</h5>
                                <p class="text-muted small mb-2">
                                    <i class="bi bi-geo-alt-fill text-danger"></i> @bilet.Eveniment.Locatie
                                </p>
                                <span class="badge bg-success w-auto align-self-start">
                                    PLĂTIT - @bilet.Pret LEI
                                </span>
                            </div>

                            <div class="col-md-3 bg-white p-2 d-flex justify-content-center align-items-center">
                                <img src="https://api.qrserver.com/v1/create-qr-code/?size=100x100&data=TICKET-@bilet.Id-USER-@Model.Id"
                                     alt="QR Code" class="img-fluid" style="opacity: 0.9;">
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5 bg-light rounded-3 border border-dashed">
                    <i class="bi bi-ticket-perforated display-1 text-muted opacity-25"></i>
                    <h5 class="mt-3 text-muted">Nu ai evenimente viitoare</h5>
                    <a asp-controller="Evenimente" asp-action="Index" class="btn btn-primary mt-2" style="background-color: #d63384; border:none;">
                        Găsește un eveniment
                    </a>
                </div>
            }

            <h5 class="fw-bold mt-5 mb-3">Istoric Recenzii</h5>
            @if (Model.Reviews != null && Model.Reviews.Any())
            {
                <div class="row">
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-0 shadow-sm bg-light">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <small class="fw-bold text-truncate">@review.Eveniment.Nume</small>
                                        <div class="text-warning small">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <span>@(i <= review.Rating ? "★" : "☆")</span>
                                            }
                                        </div>
                                    </div>
                                    <p class="small text-muted mb-0 fst-italic">"@review.Continut"</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted small">Nu ai lăsat încă nicio recenzie.</p>
            }
        </div>
    </div>
</div>