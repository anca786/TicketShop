@model IEnumerable<TicketShop.Models.Eveniment>

@{
    ViewData["Title"] = "Wishlist";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold" style="color: hotpink;">
            <i class="bi bi-heart-fill me-2"></i> Favoritele Mele
        </h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light text-center shadow-sm p-5 border rounded-3">
            <i class="bi bi-heartbreak fs-1 text-muted mb-3 d-block"></i>
            <h4 class="text-muted">Lista ta de favorite este goală.</h4>
            <p class="mb-4">Nu ai salvat încă niciun eveniment.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-search me-2"></i> Vezi Evenimente
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 hover-effect overflow-hidden">

                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                            <img src="@(string.IsNullOrEmpty(item.ImagineUrl) ? "https://placehold.co/600x400" : item.ImagineUrl)"
                                 class="card-img-top"
                                 alt="@item.Nume"
                                 style="height: 200px; object-fit: cover;">
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="text-dark text-decoration-none">
                                    @item.Nume
                                </a>
                            </h5>

                            <div class="mb-3">
                                <span class="badge bg-light text-dark border">@item.Categorie?.Nume</span>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <h5 class="text-success fw-bold m-0">@item.Pret.ToString("0.00") RON</h5>
                            </div>

                            <hr class="my-3 opacity-25">

                            <div class="d-flex gap-2">
                                <a asp-controller="Cos" asp-action="Adauga" asp-route-evenimentId="@item.Id"
                                   class="btn btn-success flex-grow-1 btn-sm">
                                    <i class="bi bi-cart-plus"></i> În Coș
                                </a>

                                <a asp-action="Sterge" asp-route-id="@item.Id"
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('Sigur vrei să ștergi acest eveniment din favorite?');">
                                    <i class="bi bi-trash"></i> Șterge
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>