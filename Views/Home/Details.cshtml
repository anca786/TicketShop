@model TicketShop.Models.Eveniment

@{
    ViewData["Title"] = "Detalii Eveniment";
}

<div class="container mt-5">
    <a asp-action="Index" class="btn btn-outline-secondary mb-4">
        &larr; Înapoi la Evenimente
    </a>

    <div class="row shadow-lg p-3 mb-5 bg-body rounded">
        <div class="col-md-6">
            <img src="@(string.IsNullOrEmpty(Model.ImagineUrl) ? "https://placehold.co/600x400?text=Fara+Imagine" : Model.ImagineUrl)"
                 class="img-fluid rounded"
                 alt="@Model.Nume"
                 style="width: 100%; height: 400px; object-fit: cover;">
        </div>

        <div class="col-md-6 d-flex flex-column justify-content-center">
            <div class="mb-2">
                <span class="badge bg-primary fs-6">@Model.Categorie?.Nume</span>
            </div>

            <h1 class="display-5 fw-bold mb-3">@Model.Nume</h1>

            <p class="lead text-muted">@Model.Descriere</p>

            <hr class="my-4">

            <div class="d-flex align-items-center mb-3">
                <i class="bi bi-calendar-event fs-4 text-primary me-3"></i>
                <div>
                    <h6 class="mb-0">Data și Ora</h6>
                    <small>@Model.Data.ToString("dd MMMM yyyy, ora HH:mm")</small>
                </div>
            </div>

            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-geo-alt fs-4 text-danger me-3"></i>
                <div>
                    <h6 class="mb-0">Locație</h6>
                    <small>@Model.Locatie</small>
                </div>
            </div>

            <h3 class="text-success mb-4">Preț: 150 RON</h3>

            <button class="btn btn-success btn-lg w-100">
                <i class="bi bi-cart-plus"></i> Adaugă în Coș
            </button>
        </div>
    </div>
</div>