
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center py-4">
    <h1 class="display-4 fw-bold">Bun venit la TicketShop!</h1>
    <p class="lead">Găsește bilete la cele mai tari evenimente din oraș.</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <div class="input-group mb-3 shadow-sm">
                    <input type="text"
                           name="cautare"
                           class="form-control form-control-lg"
                           placeholder="Caută concert, meci, artist..."
                           value="@ViewData["CautareCurenta"]">

                    <button class="btn btn-primary px-4" type="submit">
                        <i class="bi bi-search"></i> Caută
                    </button>

                    @if (ViewData["CautareCurenta"] != null)
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@if (Model.Count== 0)
{
    <div class="text-center mt-5">
        <h3 class="text-muted">Nu am găsit niciun eveniment pentru "@ViewData["CautareCurenta"]"</h3>
        <a asp-action="Index" class="btn btn-link">Vezi toate evenimentele</a>
    </div>
}

<div class="row mt-4">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@(string.IsNullOrEmpty(item.ImagineUrl) ? "https://placehold.co/600x400" : item.ImagineUrl)" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Nume</h5>
                    <a asp-controller="Evenimente" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalii</a>
                </div>
            </div>
        </div>
    }
</div>