@model TicketShop.Models.Eveniment
@using TicketShop.Models

@{
    ViewData["Title"] = "Editează Eveniment";
    var categorii = ViewBag.Categorii as List<Categorie>;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="bi bi-pencil"></i> Editează Eveniment
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Evenimente" asp-action="Edit" method="post" enctype="multipart/form-data">

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Nume" class="form-label fw-bold"></label>
                            <input asp-for="Nume" class="form-control" />
                            <span asp-validation-for="Nume" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descriere" class="form-label fw-bold"></label>
                            <textarea asp-for="Descriere" class="form-control"></textarea>
                            <span asp-validation-for="Descriere" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Data" class="form-label fw-bold"></label>
                            <input asp-for="Data" type="datetime-local" class="form-control" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Locatie" class="form-label fw-bold"></label>
                            <input asp-for="Locatie" class="form-control" />
                            <span asp-validation-for="Locatie" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Pret" class="form-label">Preț (RON)</label>
                            <input asp-for="Pret" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="Pret" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Imagine Eveniment</label>

                            @if (!string.IsNullOrEmpty(Model.ImagineUrl))
                            {
                                <div class="mb-2">
                                    <img src="@Model.ImagineUrl" style="max-width: 200px; border-radius: 5px;" />
                                    <p class="text-muted small">Imaginea curentă (încarcă alta pentru a o schimba)</p>
                                </div>
                            }

                            <input asp-for="ImagineFisier" class="form-control" type="file" accept=".png,.jpg,.jpeg,.webp" />
                            <span asp-validation-for="ImagineFisier" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategorieId" class="form-label fw-bold">Categorie</label>
                            <select asp-for="CategorieId" class="form-select">
                                @foreach (var c in categorii)
                                {
                                    <option value="@c.Id"
                                            selected="@(c.Id == Model.CategorieId)">
                                        @c.Nume
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="CategorieId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="Evenimente" asp-action="AdminIndex" class="btn btn-secondary">
                                Înapoi la listă
                            </a>
                            <button type="submit" class="btn btn-success">
                                Salvează Modificările
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
