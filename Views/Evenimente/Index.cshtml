@model IEnumerable<TicketShop.Models.Eveniment>

@{
    ViewData["Title"] = "Evenimente";
    // Preluăm lista de categorii trimisă din Controller
    var categorii = ViewBag.Categorii as List<TicketShop.Models.Categorie>;
    var currentCategoryId = ViewBag.CurrentCategoryId as int?;
}

<div class="container py-5">
    <div class="row">

        <div class="col-md-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-funnel"></i> Categorii</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Index" asp-route-categoryId=""
                       class="list-group-item list-group-item-action @(currentCategoryId == null ? "active" : "")">
                        Toate Evenimentele
                    </a>

                    @if (categorii != null)
                    {
                        foreach (var cat in categorii)
                        {
                            <a asp-action="Index" asp-route-categoryId="@cat.Id"
                               class="list-group-item list-group-item-action @(currentCategoryId == cat.Id ? "active" : "")">
                                @cat.Nume
                            </a>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <h2 class="fw-bold mb-4">
                @(currentCategoryId == null ? "Toate Evenimentele" : "Evenimente filtrate")
            </h2>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    Nu există evenimente în această categorie momentan.
                </div>
            }

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">

                            <div class="card-img-top-wrapper">
                                @if (!string.IsNullOrEmpty(item.ImagineUrl))
                                {
                                    <img src="@item.ImagineUrl" class="card-img-top" alt="@item.Nume"
                                         style="height: 200px; object-fit: cover; width: 100%;">
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light text-secondary" style="height: 200px;">
                                        <span class="fs-4">Fara Imagine</span>
                                    </div>
                                }
                            </div>

                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-primary">@item.Categorie?.Nume</span>
                                    <small class="text-muted">@item.Data.ToString("dd MMM yyyy")</small>
                                </div>

                                <h5 class="card-title">@item.Nume</h5>
                                <p class="card-text text-truncate">@item.Descriere</p>
                                <p class="card-text"><i class="bi bi-geo-alt-fill text-danger"></i> @item.Locatie</p>
                            </div>

                            <div class="card-footer bg-white border-top-0 d-grid">
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                    Vezi Detalii
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>