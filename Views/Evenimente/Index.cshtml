@model IEnumerable<TicketShop.Models.Eveniment>
@using Microsoft.AspNetCore.Identity
@using TicketShop.Models
@using TicketShop.Data
@inject UserManager<ApplicationUser> UserManager
@inject ApplicationDBContext Context

@{
    ViewData["Title"] = "Evenimente";
}

<div class="container py-4">

    <form asp-action="Index" method="get" class="mb-4 bg-light p-4 rounded shadow-sm border">
        <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />

        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label fw-bold">Categorie</label>
                <select name="categoryId" class="form-select" asp-items="ViewBag.Categorii">
                    <option value="0">Toate Categoriile</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Caută eveniment</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" name="searchString" class="form-control"
                           placeholder="Ex: Lacul Lebedelor..."
                           value="@ViewData["CurrentFilter"]" />
                </div>
            </div>

            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    Filtrează
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary" title="Resetează">
                    <i class="bi bi-x-lg"></i>
                </a>
            </div>
        </div>
    </form>

    <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-white rounded shadow-sm border">
        <div class="fw-bold text-secondary">
            <i class="bi bi-sort-down-alt me-2"></i>Ordonează:
        </div>

        <div class="btn-group" role="group">
            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["DateSortParm"]"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               asp-route-categoryId="@ViewData["CurrentCategory"]"
               class="btn btn-outline-primary @(string.IsNullOrEmpty(ViewData["CurrentSort"] as string) ? "active" : "")">
                <i class="bi bi-calendar-event"></i> Dată
            </a>

            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["PriceSortParm"]"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               asp-route-categoryId="@ViewData["CurrentCategory"]"
               class="btn btn-outline-primary @((ViewData["CurrentSort"] as string)?.Contains("Price") == true ? "active" : "")">
                <i class="bi bi-tag"></i> Preț
            </a>

            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["RatingSortParm"]"
               asp-route-searchString="@ViewData["CurrentFilter"]"
               asp-route-categoryId="@ViewData["CurrentCategory"]"
               class="btn btn-outline-primary @((ViewData["CurrentSort"] as string)?.Contains("Rating") == true ? "active" : "")">
                <i class="bi bi-star-fill"></i> Rating
            </a>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center py-5">
            <h4>Nu am găsit evenimente conform criteriilor tale.</h4>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                bool isInWishlist = false;
                if (User.Identity.IsAuthenticated)
                {
                    var userId = UserManager.GetUserId(User);
                    isInWishlist = Context.Wishlists
                    .Where(w => w.UtilizatorId == userId)
                    .SelectMany(w => w.Evenimente)
                    .Any(e => e.Id == item.Id);
                }

                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm position-relative border-0 hover-effect">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <button class="btn btn-wishlist position-absolute top-0 end-0 m-2"
                                    onclick="toggleWishlist(this, @item.Id)"
                                    style="z-index: 10;">
                                @if (isInWishlist)
                                {
                                    <i class="bi bi-heart-fill fs-3" style="color: hotpink;"></i>
                                }
                                else
                                {
                                    <i class="bi bi-heart fs-3 text-white" style="text-shadow: 0 0 4px rgba(0,0,0,0.6);"></i>
                                }
                            </button>
                        }

                        <a asp-action="Details" asp-route-id="@item.Id">
                            <img src="@(string.IsNullOrEmpty(item.ImagineUrl) ? "https://placehold.co/600x400" : item.ImagineUrl)"
                                 class="card-img-top" style="height: 220px; object-fit: cover;">
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">@item.Nume</h5>

                            @if (item.RatingMediu > 0)
                            {
                                <div class="mb-2 text-warning small">
                                    <strong>@item.RatingMediu.ToString("0.0")</strong> <i class="bi bi-star-fill"></i>
                                </div>
                            }

                            <div class="mb-3 mt-2 text-secondary small">
                                <div><i class="bi bi-calendar-event me-2"></i> @item.Data.ToString("dd MMM yyyy, HH:mm")</div>
                                <div><i class="bi bi-geo-alt-fill me-2 text-danger"></i> @item.Locatie</div>
                            </div>

                            <h4 class="fw-bold text-success mb-3">@item.Pret.ToString("0.00") RON</h4>

                            <div class="mt-auto d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary flex-grow-1">Detalii</a>
                                <a asp-controller="Cos" asp-action="Adauga" asp-route-evenimentId="@item.Id" class="btn btn-primary flex-grow-1">
                                    <i class="bi bi-cart-plus"></i> Coș
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        function toggleWishlist(btn, evenimentId) {
            var icon = btn.querySelector("i");
            // Efect vizual imediat (optimist UI)
            if (icon.classList.contains("bi-heart")) {
                icon.className = "bi bi-heart-fill fs-3";
                icon.style.color = "hotpink";
            } else {
                icon.className = "bi bi-heart fs-3 text-white";
                icon.style.color = "";
            }

            // Apel server
            fetch('/Wishlist/Toggle?evenimentId=' + evenimentId, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            }).catch(error => console.error('Eroare:', error));
        }
    </script>
}