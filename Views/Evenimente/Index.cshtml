@model IEnumerable<TicketShop.Models.Eveniment>

@{
    ViewData["Title"] = "Toate Evenimentele";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Toate Evenimentele</h2>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@(string.IsNullOrEmpty(item.ImagineUrl) ? "https://placehold.co/600x400?text=Fara+Imagine" : item.ImagineUrl)"
                         class="card-img-top"
                         alt="@item.Nume"
                         style="height: 200px; object-fit: cover;">

                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge bg-primary">@item.Categorie?.Nume</span>
                            <small class="text-muted">@item.Data.ToString("dd MMM yyyy")</small>
                        </div>

                        <h5 class="card-title">@item.Nume</h5>
                        <p class="card-text text-truncate">@item.Descriere</p>
                        <p class="card-text"><i class="bi bi-geo-alt-fill text-danger"></i> @item.Locatie</p>
                    </div>

                    <div class="card-footer bg-white border-top-0 d-grid">
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Vezi Detalii</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>