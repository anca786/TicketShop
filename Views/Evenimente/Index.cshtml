@model IEnumerable<TicketShop.Models.Eveniment>
@using System.Linq
@using Microsoft.AspNetCore.Identity
@using TicketShop.Models
@inject UserManager<ApplicationUser> UserManager
@inject TicketShop.Data.ApplicationDBContext Context

@{
    ViewData["Title"] = "Evenimente";
}

<div class="container py-4">

    <form asp-action="Index" method="get" class="mb-5 bg-light p-4 rounded shadow-sm border">
        <div class="row g-3 align-items-end">

            <div class="col-md-3">
                <label class="form-label fw-bold">Categorie</label>
                <select name="categoryId" class="form-select" asp-items="ViewBag.Categorii">
                    <option value="0">Toate Categoriile</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Caută eveniment</label>
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" name="searchString" class="form-control"
                           placeholder="Ex: Lacul Lebedelor..."
                           value="@ViewData["CurrentFilter"]" />
                </div>
            </div>

            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary flex-grow-1">
                    Filtrează
                </button>

                @if (ViewData["CurrentFilter"] != null || (ViewData["CurrentCategory"] != null && (int)ViewData["CurrentCategory"] != 0))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-lg"></i>
                    </a>
                }
            </div>
        </div>
    </form>
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center py-5">
            <i class="bi bi-emoji-frown fs-1 d-block mb-3"></i>
            <h4>Nu am găsit evenimente conform criteriilor tale.</h4>
            <p>Încearcă să schimbi filtrele sau <a asp-action="Index">vezi toate evenimentele</a>.</p>
        </div>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            // Verificare Wishlist
            bool isInWishlist = false;
            if (User.Identity.IsAuthenticated)
            {
                var userId = UserManager.GetUserId(User);
                isInWishlist = Context.Wishlists
                .Where(w => w.UtilizatorId == userId)
                .SelectMany(w => w.Evenimente)
                .Any(e => e.Id == item.Id);
            }

            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm position-relative border-0 hover-effect">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <button class="btn btn-wishlist position-absolute top-0 end-0 m-2"
                                onclick="toggleWishlist(this, @item.Id)"
                                style="z-index: 10;">
                            @if (isInWishlist)
                            {
                                <i class="bi bi-heart-fill heart-active fs-3" style="color: hotpink;"></i>
                            }
                            else
                            {
                                <i class="bi bi-heart fs-3 text-white" style="text-shadow: 0 0 4px rgba(0,0,0,0.6);"></i>
                            }
                        </button>
                    }

                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                        <img src="@(string.IsNullOrEmpty(item.ImagineUrl) ? "https://placehold.co/600x400" : item.ImagineUrl)"
                             class="card-img-top"
                             alt="@item.Nume"
                             style="height: 220px; object-fit: cover;">
                    </a>

                    <div class="card-body d-flex flex-column">

                        <div class="mb-2">
                            <span class="badge bg-light text-dark border">@item.Categorie?.Nume</span>
                        </div>

                        <h5 class="card-title text-truncate" title="@item.Nume">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                @item.Nume
                            </a>
                        </h5>

                        <p class="card-text text-muted small">
                            @(item.Descriere != null && item.Descriere.Length > 90 ? item.Descriere.Substring(0, 87) + "..." : item.Descriere)
                        </p>

                        <div class="mb-3 mt-2">
                            <div class="d-flex align-items-center mb-1 text-secondary">
                                <i class="bi bi-calendar-event me-2"></i>
                                <span>@item.Data.ToString("dd MMM yyyy, HH:mm")</span>
                            </div>
                            <div class="d-flex align-items-center text-secondary">
                                <i class="bi bi-geo-alt-fill me-2 text-danger"></i>
                                <span>@item.Locatie</span>
                            </div>
                        </div>

                        <h4 class="fw-bold text-success mb-3">
                            @item.Pret.ToString("0.00") RON
                        </h4>

                        <div class="mt-auto d-flex gap-2">
                            <a asp-controller="Evenimente"
                               asp-action="Details"
                               asp-route-id="@item.Id"
                               class="btn btn-outline-secondary flex-grow-1 fw-bold py-2">
                                <i class="bi bi-eye me-1"></i> Detalii
                            </a>

                            <a asp-controller="Cos"
                               asp-action="Adauga"
                               asp-route-evenimentId="@item.Id"
                               class="btn btn-primary flex-grow-1 fw-bold py-2">
                                <i class="bi bi-cart-plus me-1"></i> În coș
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function toggleWishlist(btn, evenimentId) {
            var icon = btn.querySelector("i");
            fetch('/Wishlist/Toggle?evenimentId=' + evenimentId, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    if (data.isAdded) {
                        icon.className = "bi bi-heart-fill heart-active fs-3";
                        icon.style.color = "hotpink";
                    } else {
                        icon.className = "bi bi-heart fs-3 text-white";
                        icon.style.color = "";
                    }
                }
            })
            .catch(error => console.error('Eroare:', error));
        }
    </script>
}