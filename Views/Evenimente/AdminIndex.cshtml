@model IEnumerable<TicketShop.Models.Eveniment>

@{
    ViewData["Title"] = "Gestionează Evenimente";
}

<div class="container py-4">
    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Mesaj"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Gestionează Evenimente</h2>
        <a asp-controller="Evenimente" asp-action="New" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Adaugă Eveniment
        </a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Nume</th>
                <th>Categorie</th>
                <th>Data</th>
                <th>Locație</th>
                <th>Status</th>
                <th class="text-end">Acțiuni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Nume</td>
                    <td>@e.Categorie?.Nume</td>
                    <td>@e.Data.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@e.Locatie</td>

                    <td>
                        @if (e.Status == TicketShop.Models.EventStatus.Pending)
                        {
                            <span class="badge bg-warning text-dark">În așteptare</span>
                        }
                        else if (e.Status == TicketShop.Models.EventStatus.Approved)
                        {
                            <span class="badge bg-success">Aprobat</span>
                        }
                        else if (e.Status == TicketShop.Models.EventStatus.Rejected)
                        {
                            <span class="badge bg-danger">Respins</span>
                        }
                    </td>

                    <td class="text-end">

                        @if (e.Status == TicketShop.Models.EventStatus.Pending)
                        {
                            <a asp-action="Approve" asp-route-id="@e.Id" class="btn btn-success btn-sm me-1" title="Aprobă">
                                <i class="bi bi-check-lg"></i>
                            </a>
                            <a asp-action="Reject" asp-route-id="@e.Id" class="btn btn-danger btn-sm me-2" title="Respinge">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        }

                        <button type="button"
                                class="btn btn-info btn-sm me-1 text-white"
                                data-bs-toggle="modal"
                                data-bs-target="#generateTicketsModal"
                                data-id="@e.Id"
                                data-name="@e.Nume"
                                title="Generează Bilete">
                            <i class="bi bi-ticket-perforated"></i>
                        </button>

                        <a asp-controller="Evenimente"
                           asp-action="Edit"
                           asp-route-id="@e.Id"
                           class="btn btn-warning btn-sm me-1"
                           title="Editează">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <button type="button"
                                class="btn btn-danger btn-sm"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteEventModal"
                                data-id="@e.Id"
                                data-name="@e.Nume"
                                title="Șterge">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-controller="Evenimente" asp-action="GenereazaBilete" method="post">
    <div class="modal fade" id="generateTicketsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-info text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-ticket-perforated-fill"></i> Generează Bilete
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="generateEventId" />

                    <p>Generează bilete pentru: <strong id="generateEventName"></strong></p>

                    <div class="mb-3">
                        <label class="form-label">Număr de bilete:</label>
                        <input type="number" name="numarBilete" class="form-control" value="50" min="1" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Preț per bilet (RON):</label>
                        <input type="number" name="pret" class="form-control" value="100" step="0.01" min="1" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anulează</button>
                    <button type="submit" class="btn btn-info text-white">Generează</button>
                </div>
            </div>
        </div>
    </div>
</form>

<form id="deleteEventForm" asp-controller="Evenimente" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="deleteEventId" />

    <div class="modal fade" id="deleteEventModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">
                        <i class="bi bi-exclamation-triangle-fill"></i> Șterge Eveniment
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Închide"></button>
                </div>
                <div class="modal-body text-center">
                    <img src="~/imagini/pisicut.png" alt="Funny warning" class="img-fluid mb-3" style="max-height: 150px;" />
                    <p class="fw-bold mb-1">
                        Sigur vrei să ștergi evenimentul <span id="deleteEventName" class="text-danger"></span>?
                    </p>
                    <p class="text-muted small">Se șterge doar evenimentul, nu și categoria.</p>
                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Nu, păstrează-l</button>
                    <button type="submit" class="btn btn-danger">Da, șterge-l</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        const deleteEventModal = document.getElementById('deleteEventModal');
        deleteEventModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');
            document.getElementById('deleteEventId').value = id;
            document.getElementById('deleteEventName').textContent = '"' + name + '"';
        });

        const generateTicketsModal = document.getElementById('generateTicketsModal');
        generateTicketsModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const name = button.getAttribute('data-name');

            document.getElementById('generateEventId').value = id;
            document.getElementById('generateEventName').textContent = name;
        });
    </script>
}