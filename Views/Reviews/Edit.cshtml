@model TicketShop.Models.Review

@{
    ViewData["Title"] = "Editează Recenzia";
}

<div class="container py-5" style="max-width: 600px;">
    <div class="card shadow border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editează Recenzia</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EvenimentId" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Nota:</label>
                    <select asp-for="Rating" class="form-select">
                        <option value="5">⭐⭐⭐⭐⭐ (Excelent)</option>
                        <option value="4">⭐⭐⭐⭐ (Foarte bun)</option>
                        <option value="3">⭐⭐⭐ (Bun)</option>
                        <option value="2">⭐⭐ (Slăbuț)</option>
                        <option value="1">⭐ (Nu recomand)</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Comentariu:</label>
                    <textarea asp-for="Continut" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Continut" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Evenimente" asp-action="Details" asp-route-id="@Model.EvenimentId" class="btn btn-secondary">
                        Renunță
                    </a>
                    <button type="submit" class="btn btn-warning fw-bold">Salvează Modificările</button>
                </div>
            </form>
        </div>
    </div>
</div>